{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "Albatross.Text/Albatross.Text.csproj",
            "Albatross.Text.Table/Albatross.Text.Table.csproj",
            "Albatross.Text.CliFormat/Albatross.Text.CliFormat.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Albatross Text Library",
      "_appTitle": "Albatross Text Library",
      "_appLogoPath": "./images/logo.svg",
      "_appFaviconPath": "./images/favicon.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}